<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">add comment to <%= camp.name %> </h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= camp.id %>/comments " method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" id="" placeholder="text"/>
        </div>
        
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            submit
          </button>
        </div>
      </form>
      <a href="/campgrounds">go back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>
