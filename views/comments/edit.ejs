<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">edit comment</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form
        action="/campgrounds/<%= camp_id %>/comments/<%= comment.id %>/edit?_method=put "
        method="post"
      >
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" id=""
          value = "<%= comment.text %>"" />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            submit
          </button>
        </div>
      </form>
      <a href="/campgrounds/<%= camp_id %>">go back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>
