<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">create new campground</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="name" id="" placeholder="name"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="img" id="" placeholder="image url"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="description" id="" placeholder="description"/>
          </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            submit
          </button>
        </div>
      </form>
      <a href="/campgrounds">go back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>
