<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">edit <%= camp.name%> </h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= camp.id %>/edit?_method=put " method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="camp[name]" id="" value = "<%= camp.name %>"" />
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="camp[price]" id="" value=<%= Number(camp.price) %> min="0.01" step="0.01"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="camp[image]" id="" value = "<%= camp.image %>"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="camp[description]" id="" value = "<%= camp.description %>"/>
          </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            submit
          </button>
        </div>
      </form>
      <a href="/campgrounds">go back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>