<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">yelpcamp</p>
      <div class="list-group">
        <li class="list-group-item active">1</li>
        <li class="list-group-item">2</li>
        <li class="list-group-item">3</li>
      </div>
    </div>

    <div class="col-md-9">
      <div class="thumbnail">
        <img
          class="img-responsive"
          src="<%= campground.image %> "
          alt=""
          srcset=""
        />
        <div class="caption-full">
          <h4 class="pull-right">$9/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted by <%= campground.author.username %></em>
          </p>
          <% if (currentuser &&campground.author.id.equals(currentuser.id) ){ %>
          <a
            class="btn btn-xs btn-warning"
            href="/campgrounds/<%= campground.id %>/edit"
            >edit</a
          >
          <form
            id="deleteform"
            action="/campgrounds/<%= campground.id %>?_method=delete "
            method="POST"
          >
            <button class="btn btn-xs btn-danger">delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a
            class="btn btn-success"
            href="/campgrounds/<%= campground.id %>/comments/new"
            >add new comment</a
          >
        </div>
        <hr />
        <% campground.comments.forEach(comment => { %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>

            <span class="pull-right">10 days ago</span>
            <p>
              <%= comment.text %>
            </p>
            <% if (currentuser &&comment.author.id.equals(currentuser.id) ){ %>
            <a
              href="/campgrounds/<%= campground.id %>/comments/<%= comment.id %>/edit "
              class="btn btn-xs btn-warning"
              >edit
            </a>
            <form
              id="commentdelete"
              action="/campgrounds/<%= campground.id %>/comments/<%= comment.id %>?_method=delete"
              method="post"
            >
              <input
                class="btn btn-xs btn-danger"
                type="submit"
                value="delete"
              />
            </form>
            <% } %>
          </div>
        </div>

        <% }) %> <%- include ("../partials/footer") %>
      </div>
    </div>
  </div>
</div>
